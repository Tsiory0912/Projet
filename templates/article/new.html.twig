{% extends 'base.html.twig' %}

{% block title %}Cr√©er un nouvel article{% endblock %}

{% block body %}
<style>
    .custom-select-wrapper {
        position: relative;
    }

    .custom-select-wrapper select.form-control {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
        padding-right: 2.5rem;
    }

    .custom-select-wrapper .bi-caret-down-fill {
        position: absolute;
        top: 50%;
        right: 12px;
        transform: translateY(-50%);
        pointer-events: none;
        font-size: 1rem;
        color: #6c757d;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Cr√©er un nouvel article
            </h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="code" class="form-label">Code de l'article</label>
                        {{ form_widget(form.code, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="nom" class="form-label">Nom de l'article</label>
                        {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <label for="{{ form.categorie.vars.id }}" class="form-label">Cat√©gorie</label>
                    <div class="custom-select-wrapper">
                        {{ form_widget(form.categorie, { 'attr': {'class': 'form-control'} }) }}
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="{{ form.unite.vars.id }}" class="form-label">Unit√©</label>
                    <div class="custom-select-wrapper">
                        {{ form_widget(form.unite, { 'attr': {'class': 'form-control'} }) }}
                        <i class="bi bi-caret-down-fill"></i>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="stockAlerte" class="form-label">Quantit√©</label>
                        {{ form_widget(form.stockAlerte, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-check-circle me-1"></i>Enregistrer
                </button>
                <a href="{{ path('app_article_index') }}" class="btn btn-secondary">
                    <i class="bi bi-x-circle me-1"></i>Annuler
                </a>
            </div>

            {# üîê Ajout automatique du champ CSRF et des champs non affich√©s #}
            {{ form_rest(form) }}

            {{ form_end(form, { 'render_rest': false }) }}
        </div>
    </div>
</div>
{% endblock %}
