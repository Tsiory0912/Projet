{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'article</h1>

        <table class="table table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Code</th>
                    <td>{{ article.code }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ article.nom }}</td>
                </tr>
                <tr>
                    <th>Stock Alerte</th>
                    <td>{{ article.stockAlerte }}</td>
                </tr>
                <tr>
                    <th>Catégorie</th>
                    <td>{{ article.categorie.nom }}</td>
                </tr>
                <tr>
                    <th>Unité</th>
                    <td>{{ article.unite.nom }}</td>
                </tr>
                <tr>
                    <th>Stock</th>
                    <td>{{ article.stock ? article.stock.quantite : 'Pas de stock associé' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_article_index') }}" class="btn btn-secondary">Retour à la liste</a>
            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>
        </div>

        <div class="mt-4">
            {{ include('article/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
