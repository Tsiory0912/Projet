{% extends 'base.html.twig' %}

{% block title %}Modifier la Catégorie{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Modifier la catégorie</h1>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Modifier les informations de la catégorie</h3>
        </div>
        <div class="card-body">
            {{ include('categorie/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
            <button type="submit" class="btn btn-success btn-sm" form="categorie_form">
                <i class="fas fa-save"></i> Mettre à jour
            </button>
        </div>
    </div>
</div>
{% endblock %}
