{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Créer une nouvelle catégorie</h1>

    {{ form_start(form) }}
        {{ form_row(form.nom) }} <!-- Affiche le champ 'nom' -->
        {{ form_row(form.reference) }} <!-- Ajoute aussi le champ 'reference' -->

        <button type="submit" class="btn btn-success">Créer</button>
        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
    {{ form_end(form) }}
</div>
{% endblock %}
