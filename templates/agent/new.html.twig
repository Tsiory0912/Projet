{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Créer un nouvel agent</h1>

    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}

    <div class="col-md-6">
        {{ form_label(form.matricule) }}
        {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.nom) }}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="col-md-6">
        {{ form_label(form.roles) }}
        {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
    </div>

    <!-- Le champ password a été supprimé -->

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('app_agent_index') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}
