{% extends 'base.html.twig' %}

{% block title %}Détails de l'entrée{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">📦 Détails de l'entrée de stock</h1>

    <div class="card shadow rounded-4">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <tbody>
                    <tr>
                        <th scope="row">🔢 ID</th>
                        <td>{{ entree.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row">🧾 Article</th>
                        <td>{{ entree.article ? entree.article.nom : 'Non spécifié' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📅 Date d'entrée</th>
                        <td>{{ entree.dateEntree ? entree.dateEntree|date('d/m/Y H:i') : 'Non définie' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📦 Quantité</th>
                        <td>{{ entree.quantite }}</td>
                    </tr>
                    <tr>
                        <th scope="row">📝 Observation</th>
                        <td>{{ entree.observation ? entree.observation : 'Aucune' }}</td>
                    </tr>
                    <tr>
                        <th scope="row">⏱️ Dernière mise à jour</th>
                        <td>{{ entree.dateMaj ? entree.dateMaj|date('d/m/Y H:i') : 'Non définie' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a href="{{ path('app_entree_index') }}" class="btn btn-outline-secondary rounded-pill">
            🔙 Retour à la liste
        </a>
        <div>
            <a href="{{ path('app_entree_edit', {'id': entree.id}) }}" class="btn btn-outline-primary rounded-pill me-2">
                ✏️ Modifier
            </a>
            {{ include('entree/_delete_form.html.twig', { 'class': 'd-inline' }) }}
        </div>
    </div>
</div>
{% endblock %}
